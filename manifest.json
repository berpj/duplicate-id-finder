{
  "name": "Duplicate IDs Checker",
  "version": "1.0",
  "description": "Checks for duplicate HTML IDs on the current page",
  "manifest_version": 3,
  "icons": {
    "32": "icon-32.png",
    "128": "icon-128.png",
    "128": "icon-512.png"
  },
  "action": {
    "default_icon": {
      "32": "icon-32.png",
      "128": "icon-128.png",
      "512": "icon-512.png"
    },
    "default_title": "Duplicate IDs Checker",
    "badge": {
      "color": [0, 0, 255, 0],
      "text": "0"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
